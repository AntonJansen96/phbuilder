import universe

target = universe.get('d_target')

if (target == "gentopol"):

    # Parse lambdagrouptypes.dat and add the LambdaType objects to the universe.
    parseLambdaGroupTypesFile()

    # Run the gentopol subcommand.
    gentopol()

elif (target == "addbuffers"):
    pass

elif (target == "addparams"):
    pass
